    @*bar diagram*@

    <script>
        $(document).ready(setup);
        function setup() {
            var option = {
                type: "GET",
                url: "/chart/data",
                contentType: "application/json;charset=utf-8",
                datatype: "json",
                success: data_arrived
            };
            $.ajax(option);
        }

        function data_arrived(data) {
            console.log(data);
            var x_data = data[0];
            var y_data = data[1];
            var graph_data = {
                labels: x_data,
                datasets: [
                    {
                        label: 'Zone',
                        data: y_data,
                        fill: true,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }
                ]
            };
            var panel1 = $('#chart1').get(0).getContext("2d");
            var myChart = new Chart(panel1,
                {
                    type: 'bar',
                    data: graph_data,
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        },
                        plugins: {
                            labels: false  
                        },
                        title: {
                            display: true,
                            text: 'Total sales by zones'
                        },
                        legend: { display: false }

                    }

                }
            );
        }


    </script>

